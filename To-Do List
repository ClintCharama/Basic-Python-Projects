tasks = list()
def PrintList():
  if len(tasks) == 0:
      print('You currently have no tasks')
  else:
     print('\nCurrent Tasks')
     for count in range(len(tasks)):
       print(f'Task #{count + 1} : {tasks[count]}')

def AddTask():
  newTask = input('Enter new task: ')
  tasks.append(newTask)
  print(f'"{newTask}" has been successfully added to the list')

def RemoveTask():
   toRemove = int(input('Which task number do you want to remove? '))
   toRemove -= 1
   if toRemove >= len(tasks):
    print('Selected task does not exist')
   else:
    toRemoveFull = tasks[toRemove]
    tasks.pop(toRemove)
    print(f'"{toRemoveFull}" has been successfully removed from the list')

def WhiteSpace():
  print('\n\n')

while True:
  print('--------------------------')
  print('Welcome to your to do list')
  print('--------------------------')
  print('1) Add a task')
  print('2) Remove a task')
  print('3) View the list')
  print('4) Exit\n')
  action = int(input('What would you like to do? '))
  if action == 1:
    AddTask()
    WhiteSpace()

  elif action == 2:
     PrintList()
     if len(tasks) == 0:
      WhiteSpace()
      continue
     else:
      RemoveTask()
     WhiteSpace()

  elif action == 3:
    PrintList()
    WhiteSpace()

  elif action == 4:
    break

  else:
    print('Invalid option, please try again')
    WhiteSpace()
